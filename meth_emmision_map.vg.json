{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Emmision Map",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/RashidAnuar/FIT3179-HW9/refs/heads/main/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/RashidAnuar/FIT3179-HW9/refs/heads/main/Methane_final.csv"
        },
        "key": "country",
        "fields": ["emissions"]
      }
    },
    {"calculate": "toNumber(datum.emissions)", "as": "Emissions"},
    {"filter": "isValid(datum.Emissions) && isFinite(datum.Emissions)"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Emissions",
      "type": "quantitative",
      "title": "Methane emissions(million tons)"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Emissions", "type": "quantitative", "format": ",.2f"}
    ]
  }
}